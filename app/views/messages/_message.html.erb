<div class="row d-block pt-1">
  <% messages.each do |message| %>
    <% if message.send_user.id == current_user.id %>
      <div class-"mb-1 d-flex">
        <%= message.chat %>
      </div>
    <% else %>
      <div class-"d-flex flex-row-reverse mb-1">
        <%= message.chat %>
      </div>
    <% end %>
  <% end %>
</div>